packages:
  yum:
    python3-devel: []    # Required for Python C extensions
    gcc-c++: []          # For compiling native dependencies
    postgresql-devel: [] # If using psycopg2
    libjpeg-turbo-devel: [] # For Pillow (image processing)
    zlib-devel: []       # Compression libraries

commands:
  01_clear_pip_cache:
    command: rm -rf /root/.cache/pip
  02_upgrade_pip:
    command: /usr/bin/python3 -m pip install --upgrade pip
    ignoreErrors: true

